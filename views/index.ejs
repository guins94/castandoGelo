<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('partials/head') %>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <body>
    <v-app class="overflow-hidden" id="app" v-cloak>
      <v-app-bar
        absolute
        color="#17223d"
        shrink-on-scroll
        dark
        src="/images/vitrine.png"
        fade-img-on-scroll
        scroll-target="#scrolling-techniques-1"
      >
        <template v-slot:img="{ props }">
          <v-img
            v-bind="props"
            gradient="to top right, rgba(100,115,201,.7), rgba(25,32,72,.7)"
          ></v-img>
        </template>
  
        <v-app-bar-nav-icon></v-app-bar-nav-icon>
  
  
        <v-spacer></v-spacer>
  
        <v-btn icon>
          <v-icon>mdi-magnify</v-icon>
        </v-btn>
  
        <v-btn icon @click="darkMode()">
          <v-icon>mdi-heart</v-icon>
        </v-btn>
  
        <v-btn icon>
          <v-icon>mdi-dots-vertical</v-icon>
        </v-btn>
  
        <template v-slot:extension>
          <v-tabs v-model="tab" align-with-title>
            <v-tab>Epis√≥dios</v-tab>
            <v-tab>Sobre</v-tab>
            <v-tab>Contato</v-tab>
          </v-tabs>
        </template>
        
      </v-app-bar>

      
      <v-sheet
        id="scrolling-techniques-1"
        class="overflow-y-auto pt-100"
        max-height="600" 
      >
        <v-container style="height: 1000px;"> 
          <v-tabs-items v-model="tab">
            <v-tab-item>
              <v-card flat>
                <v-card-text>teste</v-card-text>
                <v-card-text>teste</v-card-text>
                <v-card-text>teste</v-card-text>
                <v-card-text>teste</v-card-text>
                <v-card-text>teste</v-card-text>
                <v-card-text>teste</v-card-text>
                <v-card-text>teste</v-card-text>
              </v-card>
            </v-tab-item>
            <v-tab-item>
              <v-container>
                <v-row>
                  <v-col
                    v-for="i in 6"
                    :key="i"
                    cols="12"
                    md="4"
                  >
                    <v-img
                      :src="`https://picsum.photos/500/300?image=${i * 2 * 5 + 10}`"
                      :lazy-src="`https://picsum.photos/10/6?image=${i * 2 * 5 + 10}`"
                      aspect-ratio="1"
                    ></v-img>
                  </v-col>
                </v-row>
              </v-container>
            </v-tab-item>
            <v-tab-item>
              <v-banner
                single-line
                :sticky="false"
              >
                We can't save your edits while you are in offline mode.

                <template v-slot:actions>
                  <v-btn
                    text
                    color="deep-purple accent-4"
                  >
                    Get Online
                  </v-btn>
                </template>
              </v-banner>
            </v-tab-item>
          </v-tabs-items>
        </v-container>
      </v-sheet>


    
      <v-footer>
        <!-- -->
      </v-footer>
    </v-app>
  </body>
</html>
<script>
var app = new Vue({
  el: '#app',
  vuetify: new Vuetify(),
  data: {
    tab: null,
    message: 'Hello Castando Gelo!'
  },
  methods:{
    darkMode(){
      this.$vuetify.theme.dark = !this.$vuetify.theme.dark
    },
  }
})
</script>